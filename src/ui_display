import * as THREE from "three";
import { canvas, pickHelper, camera, scene, pickPosition } from "./index.js";
import { displayObjectNames, PickHelper, getCanvasRelativePosition, setPickPosition, clearPickPosition } from "./scene_helpers";


const toggleButton = document.getElementById("toggleButton");
export let isClickEvent = false;

toggleButton.addEventListener("click", () => {
    console.log("Clicou no bot√£o");
    toggleEvent();
});

export function onDblClickEvent(event) {
    console.log(`Event`, event);
    setPickPosition(event);
    pickHelper.pick(pickPosition, scene, camera);
}

export function onHoverEvent(event) {
    console.log(`Event`, event);
    if (event.type === "mouseenter") {
        setPickPosition(event);
    } else {
        clearPickPosition();
    }
    pickHelper.pick(pickPosition, scene, camera);
}